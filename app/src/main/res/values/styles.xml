<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!--Dividers-->
    <style name="Divider_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/one</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Divider_accent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/one</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!--Button-->
    <style name="Button_borderless_yellow" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorAccentYellow</item>
    </style>
</resources>
